@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix ftr: <https://w3id.org/ftr#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix sio: <http://semanticscience.org/resource/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix adms: <http://www.w3.org/ns/adms#> .
@prefix vivo: <http://vivoweb.org/ontology/core#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix dqv: <http://www.w3.org/ns/dqv#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix : <http://www.example.org/me#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:organizationShape
  a sh:NodeShape ;
  sh:targetClass vcard:Organization ;
  sh:property [
    sh:predicate vcard:organization-name ;
    sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:predicate a ;
    sh:hasValue vcard:Organization ;
  ] .

:individualShape
  a sh:NodeShape ;
  sh:targetClass vcard:Individual ;
  sh:property [
    sh:predicate vcard:fn ;
    sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:predicate vcard:hasEmail ;
    sh:optional true ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    sh:predicate a ;
    sh:hasValue vcard:Individual ;
  ] .

:metricShape
  a sh:NodeShape ;
  sh:targetClass dqv:Metric .

:benchmarkShape
  a sh:NodeShape ;
  sh:targetClass ftr:Benchmark ;
  sh:property [
    sh:predicate dcterms:identifier ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    sh:predicate dcterms:title ;
    sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
  ] ;
  sh:property [
    sh:predicate dcterms:description ;
    sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
  ] ;
  sh:property [
    sh:predicate dcat:keyword ;
    sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
    sh:minCount 0 ;
  ] ;
  sh:property [
    sh:predicate vivo:abbreviation ;
    sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
    sh:minCount 0 ;
  ] ;
  sh:property [
    sh:predicate dcat:landingPage ;
    sh:nodeKind sh:IRI ;
    sh:minCount 0 ;
  ] ;
  sh:property [
    sh:predicate dcat:version ;
    sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
  ] ;
  sh:property [
    sh:predicate dcat:theme ;
    sh:nodeKind sh:IRI ;
    sh:minCount 0 ;
  ] ;
  sh:property [
    sh:predicate ftr:status ;
    sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
    sh:minCount 0 ;
  ] ;
  sh:property [
    sh:predicate ftr:hasAssociatedMetric ;
    sh:node :metricShape ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:predicate dcat:contactPoint ;
    sh:nodeKind sh:IRI ;
    sh:class :organizationShape, :individualShape ;
    sh:minCount 0 ;
  ] ;
  sh:property [
    sh:predicate dcterms:creator ;
    sh:nodeKind sh:IRI ;
    sh:class :organizationShape, :individualShape ;
    sh:minCount 0 ;
  ] .
